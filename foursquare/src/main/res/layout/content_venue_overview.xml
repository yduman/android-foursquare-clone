<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teammike.iptk.foursquare.activities.VenueOverviewActivity"
    tools:showIn="@layout/activity_venue_overview">
        <GridLayout
            android:id="@+id/venue_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/venue_overview_details_header"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:textColor="@color/black"
                android:background="@color/materialGrey"/>

            <TextView
                android:id="@+id/venue_overview_address"
                android:layout_column="0"
                android:layout_row="2" />

            <TextView
                android:id="@+id/venue_overview_price"
                android:layout_column="0"
                android:layout_row="3" />

            <TextView
                android:id="@+id/venue_overview_category"
                android:layout_column="0"
                android:layout_row="4" />

            <TextView
                android:id="@+id/venue_overview_hours"
                android:layout_column="0"
                android:layout_row="5"
                />

            <TextView
                android:id="@+id/venue_overview_contact"
                android:layout_column="0"
                android:layout_row="6" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/checkInFab"
                android:layout_gravity="end"
                android:src="@drawable/ic_check_in_24dp" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/venue_overview_statistics_header"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:textColor="@color/black"
                android:background="@color/materialGrey"/>

            <TextView
                android:id="@+id/venue_overview_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:id="@+id/venue_overview_checkins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:id="@+id/venue_overview_checkin_king"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:id="@+id/venue_overview_last_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/rateFab"
                android:layout_gravity="end"
                android:src="@drawable/ic_grade_black_24dp"/>

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/venue_overview_comments_header"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@color/materialGrey"/>

            <ListView
                android:id="@+id/comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>

